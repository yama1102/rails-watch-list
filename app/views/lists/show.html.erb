<div class="text-center mt-3">
  <h1><%= @list.name %></h1>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: 'btn btn-info text-center'%>
</div>

<div class="row d-flex justify-content-center">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card m-3" style="width: 18rem;">
    <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= bookmark.movie.title %></h5>
      <p class="card-text"><%= bookmark.movie.overview %></p>
      <p class="card-text"><%= bookmark.comment %></p>
      <%= link_to "delete", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-primary'%>
    </div>
  </div>
  <% end %>
</div>
